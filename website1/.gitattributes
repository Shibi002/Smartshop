# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for common code/text files
*.py     text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.js     text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.txt    text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf

git add --renormalize .
git commit -m "Normalize line endings to LF"
